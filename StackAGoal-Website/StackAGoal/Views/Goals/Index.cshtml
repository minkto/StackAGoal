@model IEnumerable<StackAGoal.Models.Goal>
@{
    ViewData["Title"] = "Index";
    // Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = "~/Views/Shared/_dashboard.cshtml";
}

<h2>Goals</h2>
@if (Model.Count() > 0 == false)
{
    <p>No data is available.</p>
}
else
{
    <table class="table table-bright table-responsive">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>Start Date</th>
                <th>Category</th>
                <th>Completed</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.StartDate</td>
                    <td>@(item.Category != null ? item.Category.Name : string.Empty)</td>
                    <td>@Html.CheckBox("Checkbox", @item.IsComplete, new { @disabled = "disabled" })</td>
                    <td>@Html.ActionLink("Edit", "UpdateGoal", "Goals", new { id = item.Id }, new { @class = "btn btn-link" })</td>
                    <td>@Html.ActionLink("Delete", "DeleteGoal", "Goals", new { id = item.Id }, new { @class = "btn btn-link" })</td>

                </tr>
            }
        </tbody>
    </table>

    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="content-panel">
                    <div class="dashboard-card">
                        <div class="dashboard-card__number">@Model.Count()</div>
                        <div class="dashboard-card__text">Number Of Goals</div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="content-panel">
                    <div class="dashboard-card">
                        <div class="dashboard-card__number">0</div>
                        <div class="dashboard-card__text">Number Of Goals</div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="content-panel">
                    <div class="dashboard-card">
                        <div class="dashboard-card__number">0</div>
                        <div class="dashboard-card__text">Number Of Goals</div>
                    </div>
                </div>
            </div>
        </div>
    </div>


}
